/* pages/reader/reader.wxss */
page{
  height: 100%;
}
.all{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.header{
  width: 100%;
  height: 140rpx;
  background-color: #262F5A;
  font-size: 5.5vh;
  display: flex;
  flex-direction: row;
  justify-content: center;  
  align-content: center;
} 
.content{
  display: flex;
  height: 650rpx;
  justify-content: space-around;
  flex-direction: column;
}
.content image{
  height: 50rpx;
  width: 50rpx;
  margin-left: 30rpx;
}
.content view text{
  margin-left: 60rpx;
  font-size:4vh;
}
button{
  margin-top: 50rpx;
  width: 240rpx
}
.footer{
  bottom: 0;
}